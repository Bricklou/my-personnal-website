    "babel-eslint": "^10.0.1",
    "bootstrap": "^4.1.0",
    "cross-env": "^5.1",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-vue": "^5.2.2",
    "jquery": "^3.2",
    "laravel-mix": "^4.0.7",
    "lodash": "^4.17.5",
    "popper.js": "^1.12",
    "pre-commit": "^1.2.2",
    "resolve-url-loader": "^2.3.1",
    "sass": "^1.15.2",
    "sass-loader": "^7.1.0",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-loader": "^6.2.0",
    "stylelint-scss": "^3.6.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.6.10"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "@websanova/vue-auth": "^2.21.14-beta",
    "bulma": "^0.7.4",
    "bulma-calendar": "^6.0.7",
    "bulma-checkradio": "^1.1.0",
    "codemirror": "^5.47.0",
    "date-fns": "^1.30.1",
    "emoji-js": "^3.4.1",
    "es6-promise": "^4.2.6",
    "showdown": "^1.9.0",
    "showdown-xss-filter": "^0.2.0",
    "twemoji": "^12.0.1",
    "vue-axios": "^2.1.4",
    "vue-notification": "^1.3.16",
